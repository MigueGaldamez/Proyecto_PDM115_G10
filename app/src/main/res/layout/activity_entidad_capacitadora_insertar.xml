<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:stretchColumns="1"
    android:background="@drawable/gradient">

    <TableLayout

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/layout_bg"
        android:orientation="vertical"
        android:padding="30dp"
        android:layout_margin="20dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/Encabezado"
            android:gravity="center"
            android:textSize="30dp"
            android:text="@string/InsertarEntidad"

            />

        <TableRow android:gravity="center">
            <TextView android:text="@string/codigo"
                />

            <EditText
                android:id="@+id/editCodigo"
                android:inputType="text"
                android:maxLength="7"
                />
        </TableRow>
        <TableRow android:gravity="center">
            <TextView android:text="@string/nombre" />
            <EditText
                android:id="@+id/editNombre"
                android:inputType="text"
                android:maxLength="30" />
        </TableRow>
        <TableRow android:gravity="center">

            <TextView
                android:text="@string/descripcion"
                app:autoSizeTextType="uniform" />
            <EditText
                android:id="@+id/editDescripcion"
                android:maxLength="100"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLines="4"/>
        </TableRow>
        <TableRow android:gravity="center">
            <TextView android:text="@string/telefono" />
            <EditText
                android:id="@+id/editTelefono"
                android:inputType="text"
                android:maxLength="30" />
        </TableRow>
        <TableRow android:gravity="center">
            <TextView android:text="@string/correo" />
            <EditText
                android:id="@+id/editCorreo"
                android:inputType="text"
                android:maxLength="100" />
        </TableRow>

        <TableRow android:gravity="center">
            <TextView android:text="@string/TipoEntidad" />

            <RadioGroup android:layout_width="192dp">

                <RadioButton
                    android:id="@+id/radio_interna"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:checked="true"
                    android:text="Entidad Interna" />

                <RadioButton
                    android:id="@+id/radio_externa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="Entidad externa" />
            </RadioGroup>


        </TableRow>


        <TableRow >
            <TextView android:text="@string/opciones" />
        </TableRow>

        <TableRow android:gravity="center" >
            <Button
                android:onClick="insertarEntidadCapacitadora"
                android:text="@string/insertar"
                android:layout_margin="6dp"/>

            <Button
                android:onClick="limpiarTexto"
                android:text="@string/limpiar"
                android:layout_margin="6dp"/>
        </TableRow>
    </TableLayout>
</TableLayout>
