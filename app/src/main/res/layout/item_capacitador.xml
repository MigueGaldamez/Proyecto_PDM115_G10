<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:padding="10dp"
    android:background="@drawable/borde_items">


    <TextView
        android:id="@+id/textcodigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/idCapacitador"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/codigocapacitador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/idCapacitador" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/texnombres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nombres"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/nombres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nombres" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            >
            <TextView
                android:id="@+id/textapellidos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/apellidos"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/apellidos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/apellidos" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="vertical">
            <TextView
                android:id="@+id/texttelefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/telefono"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/telefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/telefono" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/texcorreo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/correo"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/correo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/correo" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textprofesion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profesion"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profesion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profesion" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/texcapacitaciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/capacitaciones"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/capacitaciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/capacitaciones" />
        </LinearLayout>
    </LinearLayout>







    <TextView
        android:id="@+id/textidentidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/IdEntidadCapacitadora"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/identidadcapacitadora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/IdEntidadCapacitadora" />

</LinearLayout>